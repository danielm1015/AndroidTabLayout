<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidtablayout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.androidtablayout.AndroidTabLayoutActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Songs Activity -->
        <activity android:name="com.example.androidtablayout.SongsActivity" />

        <!-- Videos Activity -->
        <activity android:name="com.example.androidtablayout.VideosActivity" />

        <!-- Photos Activity -->
        <activity android:name="com.example.androidtablayout.PhotosActivity" />
    </application>

</manifest>